{% extends 'baseges.html.twig' %}

{% block page %}
    <a class="navbar-brand ps-5" style="text-align: center;" href="index.html">Liste des burgers</a>
 {% endblock page %}







    {% block body %}
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <div class="ml-5" style="margin-left: 14%;color:#ffbe33">
                    <h1 class="mt-4" style="font-size:32px ;">Liste des Burgers</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Liste des Burgers</li>
                    </ol> 
                </div>

                <div class="card" style=" width: 100%;">
                    <table>
                        <thead>
                            <tr>
                                <th>Image burger</th>
                                <th>Nom burger</th>
                                <th>Prix burger</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for burger in burgers %}
                            {% for image in burger.images %}
                                <tr>
                                    <td>
                                        <div class="comp">
                                            <img src="{{'/uploads/' ~ image.nom_image}}" style="width: 30%;" alt="">
                                        </div>
                                    </td>
                                    <td>{{burger.nom}}</td>
                                    <td>{{burger.prix}}FCFA</td>
                                    <td>
                                        <a href="{{path('modifier_burger',{'id':burger.id})}}" class="btn" style="color: white; background-color: #ffbe33;">Modifier</a>
                                        <a href="{{path('archiver_burger',{'id':burger.id})}}" class="btn" style="color: #ffbe33; background-color: white;">Archiver</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class = "navigation mt-3 mb-3" >
                        {{ knp_pagination_render( burgers) }}
                    </div>
                </div>
               
                   
            </div>
        </main>
    </div> 
    
    
    
      
    {% endblock %}
