              <link rel="stylesheet" href="/stylesheets/screen.css">
            {% endblock %}
        </head>

<body>
  <div class="image">
    {% block image %}
  <div class="bg-box">
    <img src="/img/banner/1.jpg" alt="">
    </div> 
    {% endblock image %}

  </div>
  
  
        <header class="header_section" style="background-color: black ;">
          <div class="container">
          <nav class="navbar navbar-expand-lg custom_nav-container">
          {% block partie1  %}
            <a class="navbar-brand" href="{{path('catalogue')}}">
              <span>
              Brazil Burger
              </span>
            </a>

          {% endblock partie1 %}

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class=""> </span>
          </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
             
                {% block navbar %}

                <ul class="navbar-nav  mx-auto ">
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('catalogue')}}">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="menu.html">Menu</a>
                    </li>
                    {% if  app.user %}
                      {% block client %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path('commande')}}">Mes commandes</a>
                        </li>
                      {% endblock client %}
                    {% endif %}
                  <div class="user_option">
                    {% if  app.user %}
                    {% block login1 %}
                    <a href="" class="user_link">
                        <i class="fas fa-user" aria-hidden="true">  
                        </i>
                        {{app.user.prenom}} {{app.user.nom}} 
                    </a>
                    {% endblock login1 %}
                    {% endif %}
{#                       <span id="compteur"></span>
 #}                      <a class="cart_link" href="{{path('cart_index')}}"><i class="fas fa-shopping-cart "></i></a>
                      <form class="form-inline">
                        <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit">
                          <i class="fa
                           fa-search" aria-hidden="true"></i>
                        </button>
                      </form>

                      {% if not app.user %}
                        {% block login2 %}
                        <a href="{{path('app_login')}}" class="order_online">
                          Connexion
                        </a>
                        {% endblock login2 %}
                      {% endif %}

                      {% if app.user  %}
                      {% block login %}
                      <a href="{{path('app_logout')}}" class="order_online">
                        Deconnexion
                      </a>  
                      {% endblock login %}
                      {% endif %}


                  </div>

               
                
                </ul>

                {% endblock navbar %}


            </div>


        </nav>
        
      </div>
      
        </header>
        {% block slider %}
    
        {% endblock slider %}
  

  
</body>
{% block body %}
  
  {% endblock body %}




