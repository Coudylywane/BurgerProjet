{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {{parent()}}
    {% block logout %}{% endblock logout %}
    {% block connect %}{% endblock connect %}

    <div class="content" id="modal">
        <img src="img/banner/banner.png" alt="" style="width: 100%; height: 902px;">
        <div class="container1">
            <form class="form" id="form" method="post">

                <div class="deal_texte">
                    <span style="color: white ;">Se Connecter</span>
                </div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-controle">
                    <label for="email">Email</label>
{#                     <input type="text" id="email" placeholder="Enter email">
 #}                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Enter email">
                    <small>Error message</small>
                </div>
                <div class="form-controle">
                    <label for="password">Password</label>
                    <input type="password"  placeholder="Enter password" name="password" id="inputPassword" autocomplete="current-password" required>
                    <small>Error message</small>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> 

                <button type="submit">Se connecter</button>
                <div class="lien">
                    <a href="{{path('app_register')}}" class="inscrip">Creer compte?</a>
                </div>
            </form>
        </div>   
    </div>
    
   





